      <a href="/settings">‚öôÔ∏è Ayarlar</a>
      <a href="http://localhost:3000">üè† Ana Sayfa</a>
    </nav>
  </header>
  
  <div class="container">
    <div class="content">
      <%- body %>
    </div>
  </div>

  <footer>
    <p>User Module - Port <%= process.env.USER_PORT || 3001 %></p>
  </footer>
</body>
</html>
